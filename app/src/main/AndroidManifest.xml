<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rodrigo.sdm.com.homeinside">

    <!--Permissions to access Internet and check the network state-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".IluminacionActivity"
            android:label="@string/scroll_ilum" />
        <activity
            android:name=".ConfiguracionActivity"
            android:label="@string/scroll_tools" />

        <activity android:name=".AboutActivity"
            android:label="@string/scroll_about"></activity>

        <activity android:name=".WeatherActivity"
            android:label="Meteorologia"></activity>

        <activity android:name=".PPersianaActivity"
            android:label="Persiana"></activity>

        <activity
            android:name=".TemperaturaActivity"
            android:label="@string/title_activity_temperatura"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>